<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Preferences (SettingsFragment)-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <!--Drawer Categories Style-->
    <style name="drawer_categories_text">
        <item name="@android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="@android:textColor">@android:color/black</item>
    </style>

    <!--Introduction-->
    <style name="introduction_header_view"
        parent="@style/location_main_info_header_detail_view">
    </style>

    <style name="introduction_view"
        parent="@style/location_main_info_detail_view">
    </style>

    <!--
    Location Summary View Styles
    -->

    <!--Main-->
    <style name="location_name_main_view">
        <item name="@android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="@android:textColor">@android:color/black</item>
        <item name="@android:textStyle">bold</item>
    </style>

    <!--Open Status-->
    <style name="location_open_status_main_view">
        <item name="@android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="@android:textColor">@android:color/black</item>
    </style>

    <!--Distance from Device-->
    <style name="location_distance_main_view"
        parent="@style/location_open_status_main_view">
    </style>

    <!--
    Location Detail View Styles
    -->

    <!--Main-->
    <style name="location_main_info_header_detail_view">
        <item name="@android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="@android:textSize">16dp</item>
        <item name="@android:textColor">@android:color/black</item>
        <item name="@android:textStyle">bold</item>
        <item name="@android:textAllCaps">true</item>
    </style>

    <style name="location_main_info_detail_view">
        <item name="@android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="@android:textSize">14dp</item>
        <item name="@android:textColor">@android:color/black</item>
        <item name="@android:layout_marginBottom">4dp</item>
    </style>

    <!--Hours of Operation-->
    <style name="location_hours_container_detail_view">
        <item name="@android:layout_width">0dp</item>
        <item name="@android:layout_height">match_parent</item>
        <item name="@android:layout_weight">1</item>
        <item name="@android:orientation">vertical</item>
    </style>

    <style name="location_hours_day_header_detail_view"
        parent="@style/location_main_info_detail_view">
        <item name="@android:layout_width">match_parent</item>
        <item name="@android:layout_height">0dp</item>
        <item name="@android:layout_weight">2</item>
        <item name="@android:layout_margin">1dp</item>
        <item name="@android:textStyle">bold</item>
        <item name="@android:background">@android:color/white</item>
    </style>

    <style name="location_hours_day_detail_view"
        parent="@style/location_hours_day_header_detail_view">
        <item name="@android:layout_weight">3</item>
        <item name="@android:textSize">12dp</item>
        <item name="@android:textStyle">normal</item>
        <item name="@android:text">@string/not_available</item>
    </style>

    <!--Features-->
    <style name="location_features_header_detail_view"
        parent="@style/location_main_info_header_detail_view">
    </style>

    <!--Feature Header (for a single feature - not for feature list)-->
    <style name="location_feature_header_detail_view"
        parent="location_features_header_detail_view">
        <item name="@android:textStyle">normal</item>
        <item name="@android:textSize">18sp</item>
        <item name="@android:textAllCaps">false</item>
    </style>

    <!--Feature Description-->
    <style name="location_features_detail_view"
        parent="location_feature_header_detail_view">
        <item name="@android:textSize">14sp</item>
    </style>

    <!--Location Description-->
    <style name="location_description_header_detail_view"
        parent="@style/location_main_info_header_detail_view">
    </style>

    <style name="location_description_detail_view"
        parent="@style/location_main_info_detail_view">
        <item name="@android:textStyle">normal</item>
    </style>

    <!--Location Images-->
    <style name="location_images_labels_detail_view"
        parent="@style/location_main_info_header_detail_view">
        <item name="@android:textAllCaps">false</item>
        <item name="@android:textSize">14dp</item>
    </style>

    <!--Distance from Device-->
    <style name="location_distance_header_detail_view"
        parent="@style/location_main_info_header_detail_view">
    </style>

    <style name="location_distance_detail_view"
        parent="@style/location_distance_main_view">
        <item name="@android:textStyle">normal</item>
    </style>

    <!--Google Maps Text by Icon-->
    <style name="location_google_maps_main_view">
        <item name="@android:textSize">18dp</item>
    </style>

    <!--Widget Text-->
    <style name="widget_text_style">
        <item name="@android:textSize">22dp</item>
    </style>

</resources>
